<Page
    x:Class="TheMealDeal.Pages.SearchByIngredientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TheMealDeal.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles ="using:TheMealDeal.Styles"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StylesDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/mixer.png" MaxWidth="200"/>
        </RelativePanel>
        <RelativePanel Grid.Row="0">
            <TextBlock Text="So what ingedients do you have?" FontFamily="Verdana" FontSize="20" 
                       Foreground="#FFC94727"
                       RelativePanel.AlignBottomWithPanel="True" 
                       RelativePanel.AlignHorizontalCenterWithPanel="True">
            </TextBlock>
        </RelativePanel>

        <RelativePanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="ingredients" MinWidth="200" MaxWidth="500"></TextBox>
            <TextBlock 
                RelativePanel.Below="ingredients"
                RelativePanel.AlignHorizontalCenterWith="ingredients"
                Text="(separate them with commas)"
                FontFamily="Verdana"
                FontSize="10"
                Foreground="#FFC94727"></TextBlock>
        </RelativePanel>
           
    </Grid>
</Page>
